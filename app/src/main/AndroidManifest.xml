<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyAppList"
        tools:targetApi="31">
<!--        Word Guess-->
        <activity
            android:name=".wordGuess.MainActivityWordGuess"
            android:exported="false">
        </activity>
<!--        Font Converter-->
        <activity android:name=".fontConverter.MainActivityFontConverter"
            android:exported="true">
        </activity>
<!--        Blue Calculator-->
        <activity
            android:name=".calculator.MainActivity_Blue_Calculator"
            android:exported="false">
        </activity>
<!--        Red Calculator-->
        <activity
            android:name=".calculator.MainActivity_Red_Calculator"
            android:exported="false">
        </activity>
<!--        Calendar-->
        <activity
            android:name=".calendar.MainActivity_Calendar"
            android:exported="true">
        </activity>
<!--        Date Counter-->
        <activity
            android:name=".dateCounter.DateCounter"
            android:exported="true">
        </activity>
<!--        Intent-->
        <activity
            android:name=".intent.ActivityLifeCycle"
            android:exported="true">
        </activity>

        <activity
            android:name=".intent.InputActivity"
            android:exported="false">
        </activity>
<!--        Music Player-->
        <activity
            android:name=".musicplayer.MainActivityMusic"
            android:exported="true">
        </activity>

        <activity
            android:name=".musicplayer.DetailActivityMusic"
            android:exported="false">
        </activity>
<!--        Voucher App-->
        <activity
            android:name=".voucher.MainActivityVoucher"
            android:exported="true">
        </activity>
        <activity
            android:name=".voucher.AddActivity"
            android:exported="false">
        </activity>
<!--        Todo List-->
        <activity
            android:name=".todolist.MainActivityTodo"
            android:exported="true">
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
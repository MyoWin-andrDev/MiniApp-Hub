<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    tools:context=".ActivityLifeCycle_001">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="200dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/android_logo"
            android:layout_gravity="center" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stack"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>

    <com.google.android.material.button.MaterialButton
        android:onClick="onExplicit"
        android:id="@+id/explicit"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Explicit Intent"
        app:cornerRadius="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:onClick="onExplicitForResult"
        android:id="@+id/explicitForResult"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Explicit Intent For Result"
        app:cornerRadius="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:onClick="onImplicit"
        android:id="@+id/implicit"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Implicit Intent"
        app:cornerRadius="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:onClick="onImplicitForResult"
        android:id="@+id/implicitForResult"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Implicit Intent For Result"
        app:cornerRadius="8dp"/>

</LinearLayout>